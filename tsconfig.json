{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "emitDeclarationOnly": false,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "skipLibCheck": true,
        "incremental": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}